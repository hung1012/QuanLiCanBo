<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Activity.Activity1">

    <EditText
        android:id="@+id/edt_nhap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:gravity="center"
        android:layout_margin="40dp"
        android:hint="Nhập số cán bộ"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        app:layout_constraintEnd_toEndOf="@+id/edt_nhap"
        app:layout_constraintStart_toStartOf="@+id/edt_nhap"
        app:layout_constraintTop_toBottomOf="@+id/edt_nhap" />
</androidx.constraintlayout.widget.ConstraintLayout>